<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="10dp"
    tools:context=".fragment.ProfileFragment">

    <TextView
        android:id="@+id/profile_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_for_splash"
        android:textStyle="bold"
        android:text="Profile" />

    <View
        android:id="@+id/line_view"
        android:background="@color/blue_for_splash"
        app:layout_constraintTop_toBottomOf="@+id/profile_text"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:id="@+id/linearlayout_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="50dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/line_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <EditText
            android:id="@+id/id_profile"
            android:text="아이디"
            android:enabled="false"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <EditText
            android:id="@+id/nickname_profile"
            android:textColor="@color/black"
            android:text="닉네임"
            android:hint="닉네임"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <EditText
            android:id="@+id/pw_profile"
            android:textColor="@color/black"
            android:hint="비밀번호"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <EditText
            android:id="@+id/pw_confirm_profile"
            android:textColor="@color/black"
            android:hint="비밀번호 확인"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <Button
            android:id="@+id/update_confirm_btn_profile"
            android:drawableRight="@drawable/ic_twotone_done_outline_24"
            android:paddingHorizontal="10dp"
            android:text="수정 완료"
            android:textColor="@color/white"
            android:background="@drawable/ripple_lime_green"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Button>

        <Button
            android:id="@+id/withdraw_btn_profile"
            android:drawableRight="@drawable/ic_twotone_pan_tool_24"
            android:paddingHorizontal="10dp"
            android:text="회원 탈퇴"
            android:textColor="@color/white"
            android:background="@drawable/ripple_lime_green"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>