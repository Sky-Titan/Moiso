<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignInActivity">

    <TextView
        android:id="@+id/moiso_text_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/blue_for_splash"
        android:textSize="50sp"
        android:textStyle="bold" />
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id_edittext_signin"
            android:hint="아이디"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/pw_edittext_signin"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Switch
            android:text="자동 로그인"
            android:textSize="@dimen/id_pw_textsize"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Switch>

    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/signin_textview_signin"
            android:text="@string/login"
            android:textColor="@color/black"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="loginClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/signup_textview_signin"
            android:text="@string/signup"
            android:textColor="@color/black"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="signUpClick"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/pw_recovery_textview_signin"
            android:text="@string/pw_recovery"
            android:textColor="@color/black"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="pwFindClick"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
</LinearLayout>